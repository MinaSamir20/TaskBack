@model IEnumerable<TaskBack.Models.Entities.Reminder>

@{
    ViewData["Title"] = "Reminders";
}

<h2>Reminders</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Reminder</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date-Time</th>
            <th>Is Sent</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.ReminderDateTime)</td>
                <td>@Html.DisplayFor(modelItem => item.IsSent)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
